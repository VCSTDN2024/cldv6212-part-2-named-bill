@page
@model ABCRetail.StorageWeb.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customer Profiles";
}

<h1 class="display-6">Customer Profiles</h1>
<p class="text-muted">Manage customer information stored in the <code>customers</code> Azure Table.</p>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success" role="alert">@Model.StatusMessage</div>
}

<section class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <strong>Add or Update Customer</strong>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Upsert">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Input.Segment" class="form-label">Segment / Partition Key</label>
                    <input asp-for="Input.Segment" class="form-control" placeholder="e.g. Retail" />
                    <span asp-validation-for="Input.Segment" class="text-danger"></span>
                    <span class="form-text">Leave blank to use the default <strong>Retail</strong> segment.</span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.CustomerId" class="form-label">Customer ID (Row Key)</label>
                    <input asp-for="Input.CustomerId" class="form-control" placeholder="Leave blank for auto-generated" />
                    <span asp-validation-for="Input.CustomerId" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="customer@placeholder.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.FirstName" class="form-label"></label>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="First name" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.LastName" class="form-label"></label>
                    <input asp-for="Input.LastName" class="form-control" placeholder="Last name" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.LoyaltyTier" class="form-label"></label>
                    <input asp-for="Input.LoyaltyTier" class="form-control" placeholder="Gold / Silver / Bronze" />
                    <span asp-validation-for="Input.LoyaltyTier" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="+27 00 000 0000" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Upsert Customer</button>
                <span class="align-self-center text-muted small">Student No.: @Model.StudentNumber</span>
            </div>
        </form>
    </div>
</section>

<section class="card shadow-sm">
    <div class="card-header bg-light">
        <strong>Stored Customers</strong>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Partition</th>
                    <th>Row</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Loyalty Tier</th>
                    <th>Phone</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Customers.Count == 0)
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No customers stored yet. Add one using the form above.</td>
                </tr>
            }
            else
            {
                foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.PartitionKey</td>
                        <td>@customer.RowKey</td>
                        <td>@string.Join(" ", new[] { customer.FirstName, customer.LastName }.Where(part => !string.IsNullOrWhiteSpace(part)))</td>
                        <td>@customer.Email</td>
                        <td>@customer.LoyaltyTier</td>
                        <td>@customer.PhoneNumber</td>
                        <td class="text-end">
                            <form method="post" asp-page-handler="Delete" class="d-inline">
                                <input type="hidden" name="partitionKey" value="@customer.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@customer.RowKey" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</section>
