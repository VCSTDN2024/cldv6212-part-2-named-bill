@page
@model ABCRetail.StorageWeb.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product Catalogue";
}

<h1 class="display-6">Product Catalogue</h1>
<p class="text-muted">Products are stored in the <code>products</code> Azure Table with SKU identifiers as row keys.</p>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success" role="alert">@Model.StatusMessage</div>
}

<section class="card shadow-sm mb-4">
    <div class="card-header bg-success text-white">
        <strong>Add or Update Product</strong>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Upsert">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <div class="row g-3">
                <div class="col-md-3">
                    <label asp-for="Input.Category" class="form-label">Category / Partition Key</label>
                    <input asp-for="Input.Category" class="form-control" placeholder="e.g. Electronics" />
                    <span asp-validation-for="Input.Category" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.ProductSku" class="form-label">SKU (Row Key)</label>
                    <input asp-for="Input.ProductSku" class="form-control" placeholder="Leave blank to auto-generate" />
                    <span asp-validation-for="Input.ProductSku" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.Name" class="form-label"></label>
                    <input asp-for="Input.Name" class="form-control" placeholder="Product name" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.Price" class="form-label"></label>
                    <input asp-for="Input.Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Input.Price" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Description" class="form-label"></label>
                    <textarea asp-for="Input.Description" class="form-control" rows="3" placeholder="Short description"></textarea>
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.StockQuantity" class="form-label"></label>
                    <input asp-for="Input.StockQuantity" class="form-control" type="number" />
                    <span asp-validation-for="Input.StockQuantity" class="text-danger"></span>
                </div>
                <div class="col-md-3 d-flex align-items-center">
                    <div class="form-check">
                        <input asp-for="Input.IsSeasonal" class="form-check-input" />
                        <label asp-for="Input.IsSeasonal" class="form-check-label">Seasonal item?</label>
                        <span asp-validation-for="Input.IsSeasonal" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-success">Upsert Product</button>
                <span class="align-self-center text-muted small">Module Code: @Model.ModuleCode</span>
            </div>
        </form>
    </div>
</section>

<section class="card shadow-sm">
    <div class="card-header bg-light">
        <strong>Stored Products</strong>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>SKU</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Seasonal</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Products.Count == 0)
            {
                <tr>
                    <td colspan="8" class="text-center text-muted">No products captured yet.</td>
                </tr>
            }
            else
            {
                foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.PartitionKey</td>
                        <td>@product.RowKey</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.StockQuantity</td>
                        <td>@(product.IsSeasonal ? "Yes" : "No")</td>
                        <td class="text-end">
                            <form method="post" asp-page-handler="Delete" class="d-inline">
                                <input type="hidden" name="partitionKey" value="@product.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@product.RowKey" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</section>
