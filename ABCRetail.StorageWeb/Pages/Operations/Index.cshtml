@page
@model ABCRetail.StorageWeb.Pages.Operations.IndexModel
@{
    ViewData["Title"] = "Operations Queue";
}

<h1 class="display-6">Operations Queue</h1>
<p class="text-muted">Messages represent order processing or inventory events persisted in the <code>operations-queue</code> queue.</p>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success" role="alert">@Model.StatusMessage</div>
}

<section class="card shadow-sm mb-4">
    <div class="card-header bg-warning">
        <strong>Publish Queue Message</strong>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Enqueue">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <div class="input-group">
                <input asp-for="MessageText" class="form-control" placeholder="e.g. Processing order ORD-###" />
                <button type="submit" class="btn btn-warning">Send</button>
            </div>
            <span asp-validation-for="MessageText" class="text-danger d-block mt-1"></span>
        </form>
        <form method="post" asp-page-handler="Clear" class="mt-3">
            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to clear the queue?');">Clear Queue</button>
        </form>
    </div>
</section>

<section class="card shadow-sm">
    <div class="card-header bg-light">
        <strong>Peeked Messages</strong>
    </div>
    <div class="card-body">
        @if (Model.Messages.Count == 0)
        {
            <p class="text-muted">No messages currently in the queue.</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var message in Model.Messages)
                {
                    <li class="list-group-item">
                        <div class="fw-semibold">@message.MessageText</div>
                        <div class="small text-muted">Inserted: @message.InsertedOn?.LocalDateTime.ToString("g") | Expires: @message.ExpiresOn?.LocalDateTime.ToString("g")</div>
                    </li>
                }
            </ul>
        }
    </div>
</section>
